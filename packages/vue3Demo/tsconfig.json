{
  "compilerOptions": {
    // ...// 其他配置
    "baseUrl": ".",
    "target": "es2020",
    "module": "ESNext",
    "sourceMap": true,
    "strict": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "suppressImplicitAnyIndexErrors":true,
    "types": ["ant-design-vue", "axios", "vite/client"],
    "jsx": "preserve",
    "paths": {
      "/@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/*.tsx",
    "src/**/*.tsx",
    "src/**/**/*.tsx",
    "src/**/**/**/*.tsx",
    "src/**/**/**/**/*.tsx",
    "src/**/*.vue",
    "src/**/**/*.vue",
    "src/**/**/**/*.vue",
    "src/types/images.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "typings",
  ],
  "exclude": ["node_modules", "dist"]
}
